<div class="container">
  <h1 class="text-center mb-4">Store</h1>
  <div class="row">
    {{#if festivals.length}}
      {{#each festivals as |festival|}}
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex justify-content-center poke" data-id="{{festival._id}}">
          <div class="card shadow bg-body rounded" style="width: 18rem;">
            <img src="{{festival.image}}" class="card-img-top" alt="{{festival.name}}">
            <div class="card-body">
              <h5 class="card-title">{{festival.name}}</h5>
              <p class="card-text">{{festival.description}}</p>
              <h4 class="card-title">{{festival.price}}</h4>
              <div class="d-flex justify-content-between">
                <a href="/festivals/{{festival._id}}" class="btn btn-primary">See details</a>
                <a class="btn btn-danger remove" data-id="{{festival_id}}">Remove</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>Store is empty :pensativo: Come back later</p>
    {{/if}}
  </div>
  <hr class="my-4">
  <div class="row">
    <div class="col col-sm-8 col-md-6 col-lg-4 mx-auto">
      <a href="/festivals/create" class="btn btn-primary bg-light-green border-0 d-block w-300">Create Festivals</a>
    </div>
  </div>
</div>
<script>
  const removeNodes = document.querySelectorAll('.remove');
  for(let node of removeNodes) {
    node.addEventListener('click', () => {
      const nodeId = node.dataset.id;
      axios.delete(`/festivals/${nodeId}`)
        .then(responseFromApi => {
          console.log('Success!', responseFromApi);
          if(responseFromApi.status == 204) {
            document.querySelector(`.festival[data-id="${nodeId}"]`).remove();
          }
        })
        .catch(error => console.log('Error!', error))
    })
  }
</script>