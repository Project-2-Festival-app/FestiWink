<div class="container">
  <div class="row">
    <div class="col text-center mt-4">
      <img src="{{currentUser.image}}" class="rounded-circle border border-3 m-4" width="200" alt={{currentUser.name}} referrerpolicy="no-referrer"/>
      <h2>Hi {{currentUser.name}}, welcome to your profile!</h2>
      <h3>Roll: {{currentUser.roll}}</h3>
      <hr class="my-4">
    </div>

    {{#each likes as |like| }}
    <div class="col text-center mt-4 container">
      <img src="{{like.festival.image}}" class="rounded-circle border border-3 m-4" width="200" alt={{like.festival.name}} referrerpolicy="no-referrer"/>
      <h2>{{like.festival.name}}!</h2>
      <h3>Price: {{like.festival.price}}</h3>
      <hr class="my-4">
    </div>
    {{/each}}
  </div>
</div>